<html t:type="layout" title="Backbone &amp; Dust Demo"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

    <div id="field">
        <img id="dancingbeaver" src="${context:img/moosenbeaverdancing.gif}" class="dancing" />
        <img id="green-ball" src="${context:img/green_ball.gif}" class="ball" />

        <img id="albinobeaver" src="${context:img/moosenbeaver.gif}" class="albino" />

        <div class="endzone fLeft">
            <div class="endzone-text"><b>E<br />N<br />D<br />Z<br />O<br />N<br />E</b></div>
        </div>

        <div class="endzone fRight">
            <div class="endzone-text"><b>E<br />N<br />D<br />Z<br />O<br />N<br />E</b></div>
        </div>
        <br clear="both" />
    </div>

    <script id="score-template" type="text/x-dust-template">
        <div class="score">
            <h1>Dancing Beaver</h1>
            <b>Score: {dancingscore}</b>
        </div>
        <div class="score">
            <h1>Albino Beaver</h1>
            <b>Score: {albinoscore}</b>
        </div>
    </script>

    <div id="scores"></div>

    <script id="crowd-template" type="text/x-dust-template">
        <img style="right: 50px; bottom: 50px;" class="person" src="${context:img/c.png}" />
        <img style="right: 250px; bottom: 40px;" class="person" src="${context:img/dk.png}" />
        <img style="right: 180px; bottom: 120px;" class="person" src="${context:img/u.png}" />
        {?showText}
            <h1 class="wild-text"><blink>THE CROWD GOES WILD</blink></h1>
        {/showText}
    </script>

    <div id="crowd"></div>

</html>
